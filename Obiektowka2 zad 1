#include <string>
#include <iostream>
using namespace std;

class book {
    private:
    string tytuł;
    string autor;
    int rokW;
public:
    book(string tytuł, string autor, int rokW): tytuł(tytuł), autor(autor), rokW(rokW) {}
    int dane_rokW() const {
        return rokW;
    }
    string dane_autor() const {
        return autor;
    }
    string dane_tytu() const {
        return tytuł;
    }
    void wyswietl() {
        cout << "Tytuł " << tytuł << endl;
        cout << "Autor " << autor << endl;
        cout << "Rok wydania " << rokW << endl;
        cout << endl;
    }
};
int main() {
book b1("Zycie","Amadeusz Ferrari",1899);
    book b2("To Kill a Mockingbird", "Harper Lee", 1960);
    book b3("The Great Gatsby", "F. Scott Fitzgerald", 1925);

b1.wyswietl();
    b2.wyswietl();
    b3.wyswietl();
    return 0;
}
